# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = false
    color_good = "#00aa00"
    color_degraded = "#aaaa00"
    color_bad = "#aa0000"
    interval = 1
}

order += "path_exists vpn"
order += "path_exists vpn2f"
order += "wireless wlan0"
order += "battery 0"
order += "volume pcm"
order += "tztime local"

wireless wlan0 {
    format_up = "signal %quality"
    format_down = "signal down"
    format_quality = "%d"
}

battery 0 {
    format = "battery %percentage"
    format_percentage = "%.0f"
    last_full_capacity = true
}

path_exists vpn {
    format = "vpn"
    format_down = ""
    path = "/proc/sys/net/ipv4/conf/tun0"
}

path_exists vpn2f {
    format = "vpn2f"
    format_down = ""
    path = "/proc/sys/net/ipv4/conf/tap0"
}

tztime local {
    format = "%-l:%M %P"
}

volume pcm {
    format = "audio %volume"
    format_muted = "muted"
    device = "default"
    mixer = "PCM"
    mixer_idx = 0
}
